# QuantEngines Congressional Trading Analytics Platform
# Environment Configuration Template
#
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!

# ============================================================================
# CORE SETTINGS (Required)
# ============================================================================

# Application
PROJECT_NAME=QuantEngines
VERSION=1.0.0
API_V1_STR=/api/v1
ENVIRONMENT=development  # development, staging, production

# Security (CHANGE THESE!)
SECRET_KEY=your-secret-key-here-change-this-in-production-min-32-chars
JWT_SECRET_KEY=your-jwt-secret-key-here-change-this-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================================================
# DATABASE (Required)
# ============================================================================

# PostgreSQL (Production)
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/quant

# SQLite (Development/Testing)
# DATABASE_URL=sqlite+aiosqlite:///./quant.db

# ============================================================================
# REDIS (Required for caching and Celery)
# ============================================================================

REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600
CACHE_ENABLED=true

# ============================================================================
# CELERY (Required for automated scraping)
# ============================================================================

CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ============================================================================
# CORS (Required for frontend)
# ============================================================================

# Development
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Production (update with your domain)
# BACKEND_CORS_ORIGINS=["https://yourdomain.com","https://api.yourdomain.com"]

# ============================================================================
# EXTERNAL APIs (Optional but recommended)
# ============================================================================

# Stock Market Data
POLYGON_API_KEY=your-polygon-api-key-here
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-api-key-here
FINNHUB_API_KEY=your-finnhub-api-key-here

# News & Sentiment
NEWS_API_KEY=your-newsapi-key-here
TWITTER_BEARER_TOKEN=your-twitter-bearer-token-here

# AI/ML Services
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here
DEEPSEEK_API_KEY=your-deepseek-api-key-here
GROQ_API_KEY=your-groq-api-key-here

# ============================================================================
# EMAIL (Required for alerts and notifications)
# ============================================================================

# Resend (Primary - Recommended)
RESEND_API_KEY=your-resend-api-key-here
EMAIL_FROM=noreply@yourdomain.com
EMAIL_FROM_NAME=QuantEngines

# SMTP Fallback
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_TLS=true

# ============================================================================
# PAYMENTS (Required for premium features)
# ============================================================================

STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key-here
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key-here
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret-here

# Stripe Price IDs (create these in Stripe dashboard)
STRIPE_PRICE_BASIC_MONTHLY=price_basic_monthly_id
STRIPE_PRICE_BASIC_YEARLY=price_basic_yearly_id
STRIPE_PRICE_PREMIUM_MONTHLY=price_premium_monthly_id
STRIPE_PRICE_PREMIUM_YEARLY=price_premium_yearly_id
STRIPE_PRICE_ENTERPRISE_MONTHLY=price_enterprise_monthly_id
STRIPE_PRICE_ENTERPRISE_YEARLY=price_enterprise_yearly_id

# ============================================================================
# MONITORING (Recommended for production)
# ============================================================================

# Sentry Error Tracking
SENTRY_DSN=your-sentry-dsn-here
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

# Prometheus Metrics
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json  # json or text

# ============================================================================
# RATE LIMITING
# ============================================================================

# Per-tier rate limits (requests per day)
RATE_LIMIT_FREE=100
RATE_LIMIT_BASIC=1000
RATE_LIMIT_PREMIUM=10000
RATE_LIMIT_ENTERPRISE=100000

# ============================================================================
# FEATURE FLAGS
# ============================================================================

ENABLE_WEBSOCKETS=true
ENABLE_ML_PREDICTIONS=true
ENABLE_OPTIONS_ANALYSIS=true
ENABLE_SENTIMENT_ANALYSIS=true
ENABLE_PATTERN_RECOGNITION=true
ENABLE_REAL_TIME_ALERTS=true

# ============================================================================
# DEVELOPMENT/DEBUGGING (Development only)
# ============================================================================

DEBUG=false
RELOAD=false
TESTING=false

# ============================================================================
# FRONTEND (For reference)
# ============================================================================

# The frontend .env.local should have:
# NEXT_PUBLIC_API_URL=http://localhost:8000
# Or in production:
# NEXT_PUBLIC_API_URL=https://api.yourdomain.com

# ============================================================================
# NOTES
# ============================================================================

# Required for basic functionality:
# - PROJECT_NAME, VERSION, API_V1_STR, ENVIRONMENT
# - SECRET_KEY, JWT_SECRET_KEY
# - DATABASE_URL
# - REDIS_URL (for caching)

# Recommended for full functionality:
# - POLYGON_API_KEY or ALPHA_VANTAGE_API_KEY (stock data)
# - RESEND_API_KEY or SMTP settings (email)
# - STRIPE keys (payments)
# - SENTRY_DSN (error tracking)

# Optional enhancements:
# - AI API keys (ML predictions)
# - NEWS_API_KEY (sentiment analysis)
# - TWITTER_BEARER_TOKEN (social sentiment)

# Security best practices:
# - Use strong, unique SECRET_KEY and JWT_SECRET_KEY (min 32 chars)
# - Never commit .env to version control
# - Use different keys for development and production
# - Rotate keys periodically
# - Use environment-specific Stripe keys (test vs live)
